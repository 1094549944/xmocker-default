* {
  box-sizing: border-box;
  -webkit-tap-highlight-color: rgba($black, 0); //  remove tap highlight color for mobile safari
}

*:before,
*:after {
  box-sizing: border-box;
}

:root {
  width: 100%;
  height: 100%;
  cursor: default;
  font-size: 12px
}

body {
  // min-width: 1280px;
  width 100%
  height @width;
  font-family $font-family
  font-size $font-size-base
  line-height $line-height-base
  color $text-color
  background-color $body-background
  -webkit-font-smoothing antialiased
  -webkit-text-size-adjust 100%
  overflow-y auto
}

// unify the setting of elements's margin and padding for browsers
body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,code,form,fieldset,legend,input,textarea,p,blockquote,th,td,hr,button,article,aside,details,figcaption,figure,footer,header,hgroup,menu,nav,section {
  margin 0
  padding 0
}

// Reset fonts for relevant elements
button,input,select,textarea {
  font-family inherit
  font-size inherit
  line-height inherit
  color inherit
}

ul,
ol {
  list-style none
}

// Remove the clear button of a text input control in IE10+
input::-ms-clear, input::-ms-reveal {
  display none
}

textarea {
  resize none !importan
}

// Links
body a {
  color inherit
  background transparent
  text-decoration none
  outline none
  cursor pointer
  transition all $animation-duration-slow $ease

  &:focus {
    text-decoration none
    text-decoration-skip ink
  }

  &:active,
  &:hover {
    outline 0
    text-decoration none
  }

  &[disabled] {
    color $text-color-placeholder
    cursor not-allowed
    pointer-events none
  }
}

h1, h2, h3, h4, h5, h6 {
  margin 0
  padding 0
  line-height $line-height-base
}

.none {
  display none !important
}

::-webkit-input-placeholder {
  color $grey-2
}

:-moz-placeholder {
  color $grey-2
}

::-moz-placeholder {
  color $grey-2
}

:-ms-input-placeholder {
  color $grey-2
}

img {
  max-width 100%
  height auto
  vertical-align middle
  border 0
}

table {
  width 100% !important
}